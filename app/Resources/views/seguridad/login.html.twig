{% extends 'base.html.twig' %}

{% block title %}Ingreso{% endblock %}

{% block body %}
	{% if error %}
    	<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
		<div id="articulos"></div>
		<a id="link_articulos" href="#">Cargar articulos</a>
		
        <form action="{{ path('login') }}" method="post">
        	<div class="form-group">
            	<label for="username">Username:</label>
            	<input type="text" class="form-control" id="username" name="_nick" value="{{ last_username }}"  placeholder="Ingrese su usuario" />
        	</div>
        	<div class="form-group">
        		<label for="password">Password:</label>
            	<input type="password" class="form-control" id="password" name="_clave" placeholder="Ingrese su contraseña"/>
        	</div>
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
        	<input type="hidden" name="_target_path" value= "home"/>
            <button type="submit" class="btn btn-primary">Ingresar</button>
            <button type="button" class="btn btn-primary" id="boton1">Ingresar boton1</button>
        </form>
{% endblock %}
