{% extends 'base.html.twig' %}
{% block body %}
	<div class="container">
		{{ form_start(form) }}
		<div class="form-group row">
			<label for="inputNick" class="col-sm-2" >Ingrese Nick: </label>
		    <div class="col-sm-10">
		    	<input type="text" name="form[nick]" id="inputNick" required="required" placeholder="Usuario">
		    </div>
		</div>
		<div class="form-group row">
			<label for="inputContrasenaPlana1" class="col-sm-2"> Ingrese su contrasena:</label>
			<div class="col-sm-10">
				<input type="password" name="form[contrasenaPlana][first]" id="inputContrasenaPlana1" required="required" placeholder="Contrasena">
			</div>
		</div>
		<div class="form-group row">
			<label for="inputContrasenaPlana2" class="col-sm-2">Repita su contrasena:</label>
			<div  class="col-sm-10">
				<input type="password" name="form[contrasenaPlana][second]" id="inputContrasenaPlana2" required="required" placeholder="Repetir Contrasena">	
			</div>
		</div>
		<div class="form-group row">
			<label for="tipo" class="col-sm-2">Tipo de usuario:</label>
			<div class="col-sm-10">
				<input type="text" name="form[tipo]" id="tipo" placeholder="Usuario">
			</div>
		</div>
		<div class="form-group row">
			<label for="fecha" class="col-sm-2">Seleccione una fecha:</label>
			<div class="col-sm-10">
				<input type="date" name="form[fechaCreacion]" id="fecha" placeholder="Fecha">
			</div>
		</div>
		<div class="form-group row">
			<label for="estado" class="col-sm-2">Estado:</label>
			<div class="col-sm-10">
				<input type="text" name="form[estado]" id="estado" placeholder="Estado">
			</div>
		</div>
		<button type="submit" name="form[guardar]" class="btn btn-primary">Guardar</button>
	</div>
			
{% endblock %}


