{% extends 'base.html.twig' %}
{% block title  %} Carrera Listar{% endblock %}
{% block body %}
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#listar_carrera_modal">Ver Carreras</button>
    
    <!-- Modal -->
    <div class="modal fade" id="listar_carrera_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Carreras</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
          	{% set cont = 0 %}
          	<table class="table">
              <thead class="thead-dark">
                <tr>
                  <th class="text-center" scope="col">#</th>
                  <th class="text-center" scope="col">Nombre</th>
                  <th class="text-center" scope="col">Descripción</th>
                  <th class="text-center" scope="col">Estado</th>
                  <th class="text-center" scope="col">Escoger</th>
                </tr>
              </thead>
              <tbody>
                   {% for carrera in carreras %}
                   <tr>
                        <td class="text-center"> {%  set cont = cont + 1 %} {{ cont }}</td>
                        <td class="text-justify">{{ carrera.nombre }}</td>
                        <td class="text-justify">{{ carrera.descripcion }}</td>
                        <td class="text-center">{{ carrera.estado }}</td>
                        <td class="text-center"><button type="button" class="btn btn-secondary btn-sm " onclick="ejm('{{ carrera.nombre}}.{{ carrera.idCarrera }}')" data-dismiss="modal"><i class="fas fa-check"></i></button></td>
                    </tr>
                    {% endfor %}
                
              </tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
    </div>
{% endblock %}