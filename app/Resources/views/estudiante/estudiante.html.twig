{% extends 'base.html.twig' %}
{% block title %} Nuevo Estudiante{% endblock %}
{% block body %}
    {{ form_start(form) }}
        <div class="form-group row row">
            <label for="identificacion" class="col-sm-2 col-form-label text-right">Identificaci&oacute;n: </label>
            <div class="col-sm-9">
            {{ form_widget(form.identificacion,{'attr':{'class':'form-control','placeholder':'Ingrese su numero de identificacion', 'id':"identificacion"}} ) }}
            </div>
        </div>
        <div class="form-group row">
        	<label for="tipoIdentificacion" class="col-sm-2 col-form-label text-right">Tipo identificaci&oacute;n</label>
        	<div class="col-sm-9">
        	    {{ form_widget(form.tipoIdentificacion,{'attr':{'class':'form-control','placeholder':'Ingrese su tipo de identificacion', 'id':"tipoIdentificacion"}} ) }}
        	</div>
        </div>
         <div class="form-group row">
        	<label for="nombres" class="col-sm-2 col-form-label text-right">Nombres:</label>
        	<div class="col-sm-9">
        	    {{ form_widget(form.nombres,{'attr':{'class':'form-control','placeholder':'Ingrese sus nombres', 'id':"nombres"}} ) }}
        	</div>
        </div>
         <div class="form-group row">
        	<label for="fechaNacimiento" class="col-sm-2 col-form-label text-right">Fecha Nacimiento:</label>
        	<div class="col-sm-9">
        	    {{ form_widget(form.fechaNacimiento,{'attr':{'class':'form-control','id':"fechaNacimiento"}} ) }}
        	</div>
        </div>
         <div class="form-group row">
        	<label for="celular" class="col-sm-2 col-form-label text-right">Celular:</label>
        	<div class="col-sm-9">
        	    {{ form_widget(form.celular,{'attr':{'class':'form-control','placeholder':'Ingrese su numero de celular', 'id':"celular"}} ) }}
        	</div>
        </div>
         <div class="form-group row">
        	<label for="telefono" class="col-sm-2 col-form-label text-right">Telefono:</label>
        	<div class="col-sm-9">
        	    {{ form_widget(form.telefono,{'attr':{'class':'form-control','placeholder':'Ingrese su numero de telefono', 'id':"telefono"}} ) }}
        	</div>
        </div>
         <div class="form-group row">
        	<label for="email" class="col-sm-2 col-form-label text-right">Email:</label>
        	<div class="col-sm-9">
        	    {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Ingrese su numero correo electronico', 'id':"email"}} ) }}
        	</div>
        </div>
         <div class="form-group row">
        	<label for="direccion" class="col-sm-2 col-form-label text-right">Direcci&oacute;n:</label>
        	<div class="col-sm-9">
        	    {{ form_widget(form.direccion,{'attr':{'class':'form-control','placeholder':'Ingrese su direccion', 'id':"direccion"}} ) }}
        	</div>
        </div>
        <div class="form-group row">
        	<label for="usuario" class="col-sm-2 col-form-label text-right">Usuario:</label>
        	<div class="col-sm-7">
        	    {{ form_widget(form.idnick,{'attr':{'class':'form-control','placeholder':'Usuario para ingreso al sistema', 'id':"usuario", 'readonly':'readonly'}} ) }}
        	</div>
        	<div class="col-sm-2">
        	    {{ render(controller('AppBundle:Carrera:listar')) }}
        	</div>
        </div>
        
        <div class="form-group row">
        	<label for="carrera" class="col-sm-2 col-form-label text-right">Carrera:</label>
        	<div class="col-sm-7">
          		{{ form_widget(form.idcarrera,{'attr':{'class':'form-control','placeholder':'Carrera a inscribirse', 'id':"carrera" , 'readonly':'readonly'}} ) }}
          	</div>	
          	<div class="col-sm-2">
				{{ render(controller('AppBundle:Carrera:listar')) }}		
			</div>  
        </div>
		
		<div class="row justify-content-md-center"
    		<div class="col-sm-auto">
            	<button class="btn btn-primary " type="submit">Guardar</button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}