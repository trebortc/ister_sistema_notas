{% extends 'base.html.twig' %}
{% block title %} Info Profesor{% endblock %}
{% block contenido %}
<div class="card mb-4">
    <div class="card-block">
        <h3 class="card-title">Profesor</h3>
        <form class="form-horizontal" action="" method="post">
            <fieldset>
                	<div class="form-group row">
                    	<label for="tipoIdentificacion" class="col-sm-2 col-form-label text-right"><strong>Tipo Identificacion:</strong></label>
                    	<div class="col-sm-4 col-form-label">
                    	    {{ profesor.tipoIdentificacion }}
                    	</div>
                    </div>
                    <div class="form-group row row">
                        <label for="identificacion" class="col-sm-2 col-form-label text-right"><strong> Identificacion:</strong></label>
                        <div class=" col-sm-4 col-form-label">
                   			{{ profesor.identificacion }}
                		</div>
            		</div>
                    <div class="form-group row">
                    	<label for="nombres" class="col-sm-2 col-form-label text-right"><strong>Nombre completo:</strong></label>
                    	<div class="col-sm-9  col-form-label">
                    	    {{ profesor.nombres }}
                    	</div>
                    </div>
                     <div class="form-group row">
                    	<label for="fechaNacimiento" class="col-sm-2 col-form-label text-right"><strong>Fecha Nacimiento:</strong></label>
                    	<div class=" col-sm-9 col-form-label">
                    	    {{ profesor.fechaNacimiento|date('m/d/Y') }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="titulo" class="col-sm-2 col-form-label text-right"><strong>Titulo:</strong></label>
                    	<div class="col-sm-9  col-form-label">
                    	    {{ profesor.titulo }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="celular" class="col-sm-2 col-form-label text-right"><strong>Celular:</strong></label>
                    	<div class="col-sm-9  col-form-label">
                    	    {{ profesor.celular }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="telefono" class="col-sm-2 col-form-label text-right"><strong>Telefono:</strong></label>
                    	<div class="col-sm-9  col-form-label">
                    	    {{ profesor.telefono }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="email" class="col-sm-2 col-form-label text-right"><strong>Email:</strong></label>
                    	<div class="col-sm-9  col-form-label">
                    	    {{ profesor.email }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="cargo" class="col-sm-2 col-form-label text-right"><strong>Cargo:</strong></label>
                    	<div class="col-sm-9  col-form-label">
                    	    {{ profesor.cargo }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="direccion" class="col-sm-2 col-form-label text-right"><strong>Direccion:</strong></label>
                    	<div class="col-sm-9  col-form-label">
                    	    {{ profesor.direccion }}
                    	</div>
                    </div>
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}