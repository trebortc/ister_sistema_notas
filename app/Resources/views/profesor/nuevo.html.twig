{% extends 'base.html.twig' %}
{% block title %} Nuevo Profesor{% endblock %}
{% block contenido %}
<div class="card mb-4">
    <div class="card-block">
        <h3 class="card-title">Profesor</h3>
        <h6 class="card-subtitle mb-2 text-muted">Nuevo</h6>
        <form class="form-horizontal" action="" method="post">
            <fieldset>
                {{ form_start(form) }}
                	<div class ="form-group row" style="display:none">
                	    {{ form_widget(form.idProfesor,{'attr':{'class':'form-control','placeholder':'', 'id':"idProfesor"}} ) }}
                	</div>
                	<div class="form-group row">
                    	<label for="tipoIdentificacion" class="col-sm-2 col-form-label text-right">Tipo Identificacion:</label>
                    	<div class="col-sm-4">
                    	    {{ form_widget(form.tipoIdentificacion,{'attr':{'class':'form-control'}} ) }}
                    	</div>
                    </div>
                    <div class="form-group row row">
                        <label for="identificacion" class="col-sm-2 col-form-label text-right">Identificacion:</label>
                        <div class="col-sm-4">
                   			{{ form_widget(form.identificacion,{'attr':{'class':'form-control','placeholder':'Ingrese su identificacion', 'id':"identificacion"}} ) }}
                		</div>
            		</div>
                    <div class="form-group row">
                    	<label for="nombres" class="col-sm-2 col-form-label text-right">Nombre completo:</label>
                    	<div class="col-sm-9">
                    	    {{ form_widget(form.nombres,{'attr':{'class':'form-control','placeholder':'Ingrese su nombre completo', 'id':"nombres"}} ) }}
                    	</div>
                    </div>
                     <div class="form-group row">
                    	<label for="fechaNacimiento" class="col-sm-2 col-form-label text-right">Fecha Nacimiento:</label>
                    	<div class="col-sm-4">
                    	    {{ form_widget(form.fechaNacimiento,{'attr':{'class':'form-control'}} ) }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="titulo" class="col-sm-2 col-form-label text-right">Titulo:</label>
                    	<div class="col-sm-9">
                    	    {{ form_widget(form.titulo,{'attr':{'class':'form-control','placeholder':'Ingrese su titulo', 'id':"titulo"}} ) }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="celular" class="col-sm-2 col-form-label text-right">Celular:</label>
                    	<div class="col-sm-9">
                    	    {{ form_widget(form.celular,{'attr':{'class':'form-control','placeholder':'Ingrese su celular', 'id':"celular"}} ) }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="telefono" class="col-sm-2 col-form-label text-right">Telefono:</label>
                    	<div class="col-sm-9">
                    	    {{ form_widget(form.telefono,{'attr':{'class':'form-control','placeholder':'Ingrese su telefono', 'id':"telefono"}} ) }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="email" class="col-sm-2 col-form-label text-right">Email:</label>
                    	<div class="col-sm-9">
                    	    {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Ingrese su email', 'id':"email"}} ) }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="cargo" class="col-sm-2 col-form-label text-right">Cargo:</label>
                    	<div class="col-sm-9">
                    	    {{ form_widget(form.cargo,{'attr':{'class':'form-control','placeholder':'Ingrese su cargo', 'id':"cargo"}} ) }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="direccion" class="col-sm-2 col-form-label text-right">Direccion:</label>
                    	<div class="col-sm-9">
                    	    {{ form_widget(form.direccion,{'attr':{'class':'form-control','placeholder':'Ingrese su direccion', 'id':"direccion"}} ) }}
                    	</div>
                    </div>
                    <div class="form-group row">
                    	<label for="usuario" class="col-sm-2 col-form-label text-right">Usuario:</label>
                    	<div class="col-sm-7">
                    	    {{ form_widget(form.idnick,{'attr':{'class':'form-control','placeholder':'Usuario para ingreso al sistema'}} ) }}
                    	</div>
                    	<div class="col-sm-2">
                    	    TEngo que crear usuario lista
                    	</div>
                    </div>
                    <!-- Form actions -->
                    <div class="form-group">
                        <div class="col-12 widget-right no-padding">
                        	<button type="submit" class="btn btn-primary btn-md float-right">Guardar</button>
                        </div>
                    </div> 
                {{ form_end(form) }}
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
    <script>
        $(document).ready(function() {
            // you may need to change this code if you are not using Bootstrap Datepicker
            $('#appbundle_profesor_fechaNacimiento').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
	</script>
{% endblock %}