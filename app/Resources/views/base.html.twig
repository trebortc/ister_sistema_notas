<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('public/css/bootstrap.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    
        <div class="container-fluid">
    		{% block body %}
    
            {% endblock %}
    	</div>
    	
        {% block javascripts %}
            <script src="{{ asset('public/js/jquery-3.3.1.slim.min.js') }}" type="text/javascript" charset="utf-8"></script>
            <script src="{{ asset('public/js/bootstrap.min.js') }}" type="text/javascript" charset="utf-8" ></script>
            <script src="{{ asset('public/js/popper.min.js') }}" type="text/javascript" charset="utf-8" ></script>
            <script src="{{ asset('public/js/tether.min.js') }}" type="text/javascript" charset="utf-8" ></script>
        {% endblock %}
    </body>
</html>
